{
	"compilerOptions": {
		"jsx": "react",
		"strict": true,
		"noEmitOnError": true,
		"outDir": "../Server/Content/Generated/JS/",
		"removeComments": false,
		"sourceMap": true,
		"target": "es5",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": [
			"dom",
			"es5",

			"es2015.core",
			"es2015.promise",
			"es2015.collection",
			"es2016.array.include",
			"es2017.string",
			"es2017.object",
			"es2018.promise"
		]
	},
	"include": [
		"app/**/*"
	]
}
